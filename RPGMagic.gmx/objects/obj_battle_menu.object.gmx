        selected++;
    } else {
        selected = 0;
    }
}

if(keyboard_check_pressed(vk_enter)) {
    page = ds_list_find_value(list.menu, selected);
    
    if(page == "Back") {
        page = "main";
    }
    
    selected = 0;
}
